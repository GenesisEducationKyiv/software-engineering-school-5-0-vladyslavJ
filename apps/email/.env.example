# Email SMTP configuration
MAIL_HOST=smtp.example.com            # SMTP server host (string)
MAIL_PORT=587                         # SMTP server port (number)
MAIL_SECURE=true                      # Use TLS/SSL (true/false)
MAIL_USER=your_email@example.com      # SMTP username (email)
MAIL_PASS=your_password               # SMTP password (string)
MAIL_FROM=Weather API <no-reply@weatherapi.app> # Sender name and email (string)

# RabbitMQ configuration
RABBITMQ_HOST=rabbitmq                # RabbitMQ host (string)
RABBITMQ_PORT=5672                    # RabbitMQ port (number)

# Application base URL
APP_BASE_URL=http://localhost:3000    # Base URL for links in emails (url)